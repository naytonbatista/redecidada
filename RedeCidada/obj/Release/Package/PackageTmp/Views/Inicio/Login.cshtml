
@{ Layout = null;}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="@Url.Content("~/Content/css/login.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/custom.css")" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/sistema/login.js")" type="text/javascript"> </script>

</head>
<body>
    <div class="header"> 
        <div class="logo">
            <img src='@Url.Content("~/Content/img/logo-redecidada.jpg")' alt="Rede Cidadã" />
        </div>

        <div class="titulo">
            <p>Rede Cidadã</p>
        </div>
    </div>
    <div class="slider">
        <img src='@Url.Content("~/Content/img/foto1.jpg")' alt="" />
    </div>
    <div class="login_box">
        <h2>
            Acesse o Sistema
        </h2>
        <hr/>
        
        <label for="login">Login</label>
        <input type="text" name="login" />
        
        <label for="senha">Senha</label>
        <input type="password" name="senha" />
        <br />
        <br />
        <button name="btnLogar" id="btnLogar">Entrar</button>
        <br />
        <br />
        <label id="validacao" style="color:red;"> </label>
    </div>

    <div class="bloqueia_tela"><img src="~/Content/img/ajax-loader.gif" /> </div>

</body>
</html>
