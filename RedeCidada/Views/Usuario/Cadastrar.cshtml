@model RedeCidada.Models.UsuarioModel

@{
    ViewBag.Title = "Novo Usuário";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h2>Novo Usuário</h2>

@using (Html.BeginForm("Cadastrar", "Usuario", FormMethod.Post, new { }))
{
    <div style="min-height:400px;">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Login)
            @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Senha)
            @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
        </div>
        <hr />

        <button class="btn btn-primary" type="submit">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>&nbsp;Cadastrar
        </button>

    </div>
}
